<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>

          <tr>
          <%= pie_chart @user.diaries.group(:titel).count %>
          </tr>

        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@name}さんのプロトタイプ"%>
      </h2>
      <div class="user__card">
        <%= render partial: 'diaries/diary', collection: @user.diaries %>
      </div>
    </div>
  </div>
</div>


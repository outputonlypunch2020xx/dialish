<div class="card">
  <%# <%= link_to image_tag("日記の画像", class: :card__img ), root_path%> 
  <div class="card__body">
    <%= link_to diary.titel, diary_path(diary.id), method: :get, class: :card__title%>
    <p class="card__summary">
    </p>
    <%= link_to "by #{diary.user.name}", "/users/#{diary.user.id}", class: :card__user %>
  </div>
  <div>
  
     <% if current_user.already_favorited?(diary) %> 
        <%= link_to diary_favorites_path(diary), method: :delete do %>
        <span style="color: red;">
        <i class="fas fa-heart"></i>
        </span>
        <% end %>
            <%= diary.favorites.count %>
            <% else %> 
              <%= link_to diary_favorites_path(diary), method: :post do %>
               <span style="color: red;">
            <i class="far fa-heart"></i>
            </span>
        <% end %> 
            <%= diary.favorites.count %>
      <% end %>    
      </div>
</div>  